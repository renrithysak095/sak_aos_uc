<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="889dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            android:background="@drawable/profile_shape"
            tools:layout_editor_absoluteY="1dp"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                >
                <Button
                    android:id="@+id/buttonAbout"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="30dp"
                    android:layout_width="40dp"
                    android:background="@drawable/baseline_arrow_back_ios_24"
                    android:layout_height="40dp">
                </Button>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile3" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/variant" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="30dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="About Me"
                    android:textSize="30sp"
                    android:textColor="@color/accent"
                    />
                <View
                    android:layout_width="55dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="50dp"
                    android:background="@color/primary" />
            </RelativeLayout>
            <!--   Name    -->
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name :"
                    android:textColor="@color/accent"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="Ren Rithysak"
                    android:textColor="@color/accent"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Id :"
                    android:textColor="@color/accent"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="85dp"
                    android:text="60-210207"
                    android:textColor="@color/accent"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status :"
                    android:textColor="@color/accent"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:text="Single"
                    android:textColor="@color/accent"
                    android:textSize="20dp" />
            </LinearLayout>
            <View
                android:layout_marginVertical="30dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/variant" />
            <!--        project title -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"

                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Heritage Info"
                    android:textSize="30sp"
                    android:textColor="@color/accent"
                    />
                <View
                    android:layout_width="55dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="50dp"
                    android:background="@color/primary" />
            </RelativeLayout>
            <!--   About project    -->
            <TextView
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="At Heritage Store, we believe in the power of timeless elegance and exceptional craftsmanship. Our collection of furniture is meticulously curated to bring a touch of sophistication and comfort to your living spaces."
                android:textSize="18sp"
                android:textColor="@color/accent"
                />
            <!--        Our Vision-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Our Vision"
                    android:textSize="30sp"
                    android:textColor="@color/accent"
                    />
                <View
                    android:layout_width="55dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="50dp"
                    android:background="@color/primary" />
            </RelativeLayout>
            <TextView
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="At Heritage Store, we envision a world where every home reflects the unique essence and personality of its inhabitants through timeless, high-quality furniture. We strive to be the leading destination for discerning customers seeking exceptional craftsmanship, innovative design, and sustainable practices."
                android:textSize="18sp"
                android:textColor="@color/accent"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>